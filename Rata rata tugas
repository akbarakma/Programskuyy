#include <iostream>
using namespace std;

int main(){
	int x = 0;
	int pilih;
	float tugas[x];
	float rata2, jumlah = 0;
	AWAL:
	cout<<"Menghitung nilai rata rata tugas !!!";
	cout<<"\n\nMasukkan nilai tugas ke "<<x+1<<" : ";cin>>tugas[x];
	if(tugas[x] >= 0 && tugas[x] <=100){
	jumlah = jumlah + tugas[x];
	rata2 = jumlah / (x+1);
	cout<<"Tambah tugas lagi? ";
	cout<<"\n1. Ya";
	cout<<"\n2. Tidak";
	cout<<"\nPilihan anda : ";cin>>pilih;
	if (pilih == 1){
		x = x+1;
		system("cls");
		goto AWAL;
	}
	else if (pilih == 2){
		system("cls");
		for (int i= 0;i<=x;i++){
			cout<<"Tugas ke "<<i+1<<" : "<<tugas[i]<<endl;
		}
		cout<<"Rata rata nya adalah : "<<rata2<<endl;
		system("PAUSE");
	}
	else {
		cout<<"Pilihan tidak ada"<<endl;
		system("PAUSE");
		system("cls");
		goto AWAL;
	}
	}
	else {
		cout<<"Jumlah nilai tidak valid."<<endl;
		system("PAUSE");
		system("cls");
		goto AWAL;
	}
	
	return 0;
	
}
